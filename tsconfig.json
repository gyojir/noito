{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "downlevelIteration": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true, // .jsファイルを使えるようにする。
  },
  "include": [
    "./src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}